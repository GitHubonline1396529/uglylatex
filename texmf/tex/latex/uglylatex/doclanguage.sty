  }
  \newcommand\figref[1]{{\bfseries 图~\ref{#1}}}
  \newcommand\tabref[1]{{\bfseries 表~\ref{#1}}}
  \renewcommand{\appendixtocname}{\textcolor{ecolor}{附录}}
  \renewcommand{\appendixpagename}{\textcolor{ecolor}{附录}}
  \renewcommand{\lstlistingname}{\color{ecolor}代码}

  % \renewcommand{\today}{
