%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
% Papersize of the document.

% Size of a panel computer.
\ifdefstring{\UGLY@device}{pad}{%
  \geometry{
    paperwidth=6in,
    paperheight=8in,
    includefoot,
    margin=8mm}}{%
  \relax}

% Size of a Personal Computer screen.
\ifdefstring{\UGLY@device}{pc}{
  \geometry{%
    margin=8mm,
    paperwidth=6.2in,
    paperheight=6in,
    includefoot}}{%
  \relax}

% Size of an Amazon Kindle Ebook reader.
\ifdefstring{\UGLY@device}{kindle}{%
  \geometry{
    margin=8mm,
    paperwidth=3.68in, 
    paperheight=4.92in}}{%
  \relax}

% Just normal A4 papers.
\ifdefstring{\UGLY@device}{normal}{%
  \geometry{
    margin=1in,
    a4paper}}{%
  \relax}

% Also A4 paper, but in a compact layout, with only 2cm margins.
\ifdefstring{\UGLY@device}{compact}{%
  \geometry{
    margin=2cm,
    a4paper}}{%
  \relax}

% Size of a lantern slide.
\ifdefstring{\UGLY@device}{screen}{%  
  \geometry{
    screen,
    paperwidth=25.4cm,
    paperheight=19.05cm,
    margin=1.6cm,
    headheight=2.17cm,
    footskip=0.6cm}}{%
  \relax}

% Size of a booklet.
\ifdefstring{\UGLY@device}{booklet}{%
  \geometry{
    margin=2cm,
    a5paper}}{%
  \relax}

% Size of a textbook.
\ifdefstring{\UGLY@device}{textbook}{%
  \geometry{
    margin=2cm,
    b5paper}}{%
  \relax}
