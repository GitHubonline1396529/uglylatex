%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
% Packages for using crossref.
\RequirePackage[
  % colorlinks=true,
  % linkcolor=black,
  % citecolor=magenta,
  % urlcolor=blue
  pdfborder={0 0 0},
  colorlinks,
  citecolor=ecolor,
  filecolor=ecolor,
  linkcolor=ecolor,
  urlcolor=ecolor
]{hyperref}
\RequirePackage{bookmark}

% Enable section numbers in PDF bookmark.
\bookmarksetup{
  numbered, 
  open,
}

