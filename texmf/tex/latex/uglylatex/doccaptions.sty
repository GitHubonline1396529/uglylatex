\NeedsTeXFormat{LaTeX2e}
\ProvidesPackage{doccaptions}[
  2025/03/18 Captions' style formatting for charts (tables and figures).
]
%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
% Set the chart caption style.

\captionsetup{
  labelfont={bf, color=ecolor}, textfont=bf,
  font={small, bf, stretch=1.25},
  labelsep=space, % A space after caption title and caption text
  justification=centering,
  singlelinecheck=false
}

% Caption for sunfigures. From subcaption package.
%
% See Also: The subcaption package <texdoc subcaption>.
\subcaptionsetup{
  labelfont={bf, color=ecolor}, textfont=bf,
  font={small, bf, stretch=1.25}, % small bold font with 1.25 line 
  labelsep=space, % 标签和标题之间的间隔
  labelformat=simple,
  singlelinecheck=off % 关闭单行检测
}

% Numbering the subcaptions as `(a)', `(b)', etc.
\renewcommand\thesubfigure{(\alph{subfigure})}
